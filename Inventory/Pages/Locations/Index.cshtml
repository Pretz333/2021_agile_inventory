@page
@model Inventory.Pages.Locations.IndexModel

@{
    ViewData["Title"] = "Locations";
}


<section>
    <h2>Locations</h2>

    <div id="tools">

        <h6>Tools</h6>
        
        <a asp-page="Create">
            <div id="toolModule">
                <div id="toolIcon">
                    <img src="res/ic_add.png">
                </div>
                <div id="toolText">
                    Create a new location
                </div>
            </div>
        </a>

        <div id="toolModule" onClick="toolClick('delete')">
            <div id="toolIcon">
                <img src="res/ic_remove.png">
            </div>
            <div id="toolText">
                Delete an existing location
            </div>
        </div>

        <div id="toolModule" onClick="toolClick('edit')">
            <div id="toolIcon">
                <img src="res/ic_edit.png">
            </div>
            <div id="toolText">
                Edit an existing location
            </div>
        </div>
    </div>
</section>




<section id="listview">
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Location[0].Description)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Location)
            {
                <tr id="row-@item.LocationID" onclick="itemClick(@item.LocationID)">
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>







<script type="text/javascript">

    var lastClickedID = 0;

    function itemClick(itemID) {
        if (lastClickedID > 0) {
            document.querySelector("#row-" + lastClickedID).classList.remove("selected");
        }
        document.querySelector("#row-" + itemID).classList.add("selected");
        lastClickedID = itemID;
    }

    function toolClick(toolName) {
        if (lastClickedID < 1) {
            alert("You must select an row from the table");
        } else {
            window.location = "/Locations/" + toolName + "?id=" + lastClickedID;
        }
    }

    document.querySelector("#Locations").classList.add("selected");

</script>