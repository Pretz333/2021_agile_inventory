@page
@model Inventory.Pages.Categories.EditModel

@{
    ViewData["Title"] = "Edit a Category";
}

<h1>Edit a Category</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category.CategoryID" />
            <div>
                <label asp-for="Category.Description" class="control-label"></label>
                <input asp-for="Category.Description" class="form-control" />
                <span asp-validation-for="Category.Description" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Save" /> |
                <a asp-page="./Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

<script>
    document.querySelector("#Categories").classList.add("selected");
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
