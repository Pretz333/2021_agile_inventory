@page
@model Inventory.Pages.Items.DeleteModel

@{
    ViewData["Title"] = "Delete Existing Item";
}

<h1>Delete Item</h1>

<h3>Are you sure you want to delete this item?</h3>
<div>
    <hr />
    <table>
        <tr>
            @Html.DisplayNameFor(model => model.Item.CategoryID):
            @Html.DisplayFor(model => model.Item.CategoryID)
        </tr>
        <br />
        <tr>
            @Html.DisplayNameFor(model => model.Item.Description):
            @Html.DisplayFor(model => model.Item.Description)
        </tr>
    </table>

    <form method="post">
        <input type="hidden" asp-for="Item.ItemID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

<script>
    document.querySelector("#Items").classList.add("selected");
