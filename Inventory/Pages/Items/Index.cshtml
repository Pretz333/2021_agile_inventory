@page
@model Inventory.Pages.Items.IndexModel

@{
    ViewData["Title"] = "Items";
}

<h1>Items</h1>

<section id="tools">
    <h2>Tools</h2>
    <a asp-page="Create">
        <div id="toolModule">
            <div id="toolIcon">
                <img src="res/ic_add.png">
            </div>
            <div id="toolText">
                Create a new item
            </div>
        </div>
    </a>

    <div id="toolModule" onClick="toolClick('Delete')">
        <div id="toolIcon">
            <img src="res/ic_remove.png">
        </div>
        <div id="toolText">
            Delete an existing item
        </div>
    </div>

    <div id="toolModule" onClick="toolClick('Edit')">
        <div id="toolIcon">
            <img src="res/ic_edit.png">
        </div>
        <div id="toolText">
            Edit an existing item
        </div>
    </div>
</section>

<section id="listview">
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Item[0].CategoryID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Item[0].Description)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Item)
            {
                <tr id="row-@item.ItemID" onclick="itemClick(@item.ItemID)">
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

<script type="text/javascript">

    var lastClickedID = 0;

    function itemClick(itemID) {
        if (lastClickedID > 0) {
            document.querySelector("#row-" + lastClickedID).classList.remove("selected");
        }
        document.querySelector("#row-" + itemID).classList.add("selected");
        lastClickedID = itemID;
    }

    function toolClick(toolName) {
        if (lastClickedID < 1) {
            alert("You must select an row from the table");
        } else {
            window.location = "/Items/" + toolName + "?id=" + lastClickedID;
        }
    }

    document.querySelector("#Items").classList.add("selected");

</script>
